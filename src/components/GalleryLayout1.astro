---
const { img1, img2, img3, name1, name2, name3, date1, date2, date3 } = Astro.props;
---

<article>
  <div class="box_1">
    <img src={img1} alt={img1} />
    <p>{name1}</p>
    <p>{date1}</p>
  </div>

  <div class="box_2">
    <img src={img2} alt={img2} />
    <p>{name2}</p>
    <p>{date2}</p>
  </div>

  <div class="box_3">
    <img src={img3} alt={img3} />
    <p>{name3}</p>
    <p>{date3}</p>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: repeat(15, 1fr);
    grid-template-rows: 1fr 1fr;
  }

  p {
    size: 5px;
  }

  .box_1 {
    grid-row: 1;
    grid-column: 1/8;
  }

  .box_2 {
    grid-row: 1;
    grid-column: 7/12;
    padding-top: 9rem;
  }

  .box_3 {
    grid-row: 2;
    grid-column: 10/15;
    padding-top: 4rem;
  }

  @media screen and (min-width: 600px) {
    article {
      display: grid;
      grid-template-columns: repeat(20, 1fr);
      grid-template-rows: 1fr;
    }

    p {
      font-size: 0.8rem;
    }

    .box_1 {
      grid-row: 1;
      grid-column: 1/8;
    }

    .box_2 {
      grid-row: 1;
      grid-column: 7/11;
      padding-top: 19rem;
    }

    .box_3 {
      grid-row: 1;
      grid-column: 13/17;
      padding-top: 4rem;
    }
  }
</style>
