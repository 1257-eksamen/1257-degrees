---
import MainLayout from "../layout/MainLayout.astro";
import TitleIntro from "../components/TitleIntro.astro";
import Calender from "../components/Calender.astro";
---

<MainLayout title="Event Calender" metabeskrivelse="On the events page, you’ll find an overview of all 1257° events in a calendar. You can access important and relevant information about each event.">
  <TitleIntro h1="EVENT CALENDER" intro="1257°’s events are open to anyone with curiosity and a desire to join. Just show up – no sign-up needed. All events take place at our studio." />
  <Calender />
  <img src="/img/kalender/formevent.webp" alt="grøn organisk form" />
</MainLayout>

<style>
  img {
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
    width: 100%;
    height: auto;
  }

  @media (min-width: 900px) {
    img {
      width: 60%;
      height: auto;
    }
  }
</style>
