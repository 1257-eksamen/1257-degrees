---
const { color } = Astro.props;
---

<a href="/">
  <svg class={color} width="105" height="105" viewBox="0 0 105 105" fill="none" xmlns="http://www.w3.org/2000/svg">
    <circle cx="52.5" cy="52.5" r="44" stroke-width="17"></circle>
  </svg>
</a>

<style>
  .primary_color {
    stroke: var(--primary);
  }

  .secondary_color {
    stroke: var(--secondary);
  }
  svg {
    width: 40px;
    height: auto;
  }

