---
const { img6, img7, img8, name6, name7, name8, date6, date7, date8 } = Astro.props;
---

<article>
  <div class="box_6">
    <img src={img6} alt={img6} />
    <p class="p_6">{name6}</p>
    <p class="p_6">{date6}</p>
  </div>

  <div class="box_7">
    <img src={img7} alt={img7} />
    <p>{name7}</p>
    <p>{date7}</p>
  </div>

  <div class="box_8">
    <img src={img8} alt={img8} />
    <p class="p_8">{name8}</p>
    <p class="p_8">{date8}</p>
  </div>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: repeat(15, 1fr);
    grid-template-rows: 1fr 1fr;
    margin-top: 8rem;
    margin-left: -2rem;
    margin-right: -1rem;
    padding-bottom: 8rem;
  }

  .p_6 {
    padding-left: 0.3rem;
  }

  .p_8 {
    padding-left: 0.3rem;
  }

  p {
    size: 5px;
  }

  .box_6 {
    grid-row: 1;
    grid-column: 1/11;
  }

  .box_7 {
    grid-row: 1;
    grid-column: 9/16;
    padding-top: 11rem;
  }

  .box_8 {
    grid-row: 2;
    grid-column: 1/9;
    padding-top: 4rem;
  }

  @media screen and (min-width: 780px) {
    article {
      display: grid;
      grid-template-columns: repeat(20, 1fr);
      grid-template-rows: 1fr;
      margin-left: -3rem;
    }

    p {
      font-size: 0.8rem;
    }

    .p_6,
    .p_8 {
      padding-left: 0;
    }

    .box_6 {
      grid-row: 1;
      grid-column: 5/13;
    }

    .box_7 {
      grid-row: 1;
      grid-column: 11/17;
      padding-top: 16.5rem;
    }

    .box_8 {
      grid-row: 2/3;
      grid-column: 1/8;
      margin-top: -6rem;
    }
  }

  @media screen and (min-width: 1440px) {
    article {
      display: grid;
      grid-template-columns: repeat(20, 1fr);
      grid-template-rows: 1fr;
      margin-left: -10.5rem;
    }

    .p_8 {
      padding-left: 0.3rem;
    }
  }
</style>
