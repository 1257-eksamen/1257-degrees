---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../style/style.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="./assets/favicon1.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content="lorem lorem lorem lorem lorem lorem lorem" />
    <link rel="stylesheet" href="https://use.typekit.net/gzj5zmu.css" /><!--adobe font-->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header title={title} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
